	function crossFadeImages (current, next) {
	    var $slideshow = $('ul.slideshow li');
	    
	    $slideshow.eq(current).fadeOut(2000);
	    $slideshow.eq(next).fadeIn(2000);
	    
	    current = next;
	    next++;
	    if (next >= $slideshow.length) {
	        next = 0;
	    }
	    
	    setTimeout(function () {
	        crossFadeImages(current, next);
	    }, 4000);
	    
	}
	
})(jQ);
