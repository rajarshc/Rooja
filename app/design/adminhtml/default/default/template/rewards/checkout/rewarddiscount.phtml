    <td style="<?php echo $this->getTotal()->getStyle() ?>" class="a-right cart-points-total_item_discounts" colspan="<?php echo $this->getColspan(); ?>" id="item_discounts_td">
        <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?><span class="rendering_area"><?php endif; ?>
        <?php echo $this->getTotal()->getTitle() ?>
            <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?></span><?php endif; ?>
    </td>
    <td style="<?php echo $this->getTotal()->getStyle() ?>" class="a-right cart-points-total_item_discounts">
        <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?><span class="rendering_area"><?php endif; ?>
            <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
            <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?></span><?php endif; ?>

        <script language="javascript" type="text/javascript">
            // WOw is this ever a hack, but it's pretty much the only sane
            // way we could figure out to get the item discounts TD to display in the 
            // correct order.  We tried all sorts of config options... BAH!
            var itemsdiscount = $('item_discounts_td').up();
            var subtotal = itemsdiscount.previous();
            var subtotal_innerhtml = subtotal.innerHTML;
            var itemsdiscount_innerhtml = itemsdiscount.innerHTML;
            itemsdiscount.innerHTML = subtotal_innerhtml;
            subtotal.innerHTML = itemsdiscount_innerhtml;
        </script>
    </td>
</tr>