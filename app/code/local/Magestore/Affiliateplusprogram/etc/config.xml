<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Affiliateplusprogram>
            <version>0.4.0</version>
        </Magestore_Affiliateplusprogram>
    </modules>
    <frontend>
        <routers>
            <affiliateplusprogram>
                <use>standard</use>
                <args>
                    <module>Magestore_Affiliateplusprogram</module>
                    <frontName>affiliateplusprogram</frontName>
                </args>
            </affiliateplusprogram>
        </routers>
        <layout>
            <updates>
                <affiliateplusprogram>
                    <file>affiliateplusprogram.xml</file>
                </affiliateplusprogram>
            </updates>
        </layout>
        <events>
            <affiliateplus_get_list_program_welcome>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>getListProgramWelcome</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_get_list_program_welcome>
            <affiliateplus_banner_prepare_collection>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>bannerPrepareCollection</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_banner_prepare_collection>
            <affiliateplus_product_get_final_price>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>productGetFinalPrice</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_product_get_final_price>
            <affiliateplus_calculate_commission_before>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>calculateCommissionBefore</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_calculate_commission_before>
            <affiliateplus_created_transaction>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>createdTransaction</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_created_transaction>
        </events>
        <translate>
            <modules>
                <Magestore_Affiliateplusprogram>
                    <files>
                        <default>Magestore_Affiliateplusprogram.csv</default>
                    </files>
                </Magestore_Affiliateplusprogram>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <affiliateplusprogramadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_Affiliateplusprogram</module>
                    <frontName>affiliateplusprogramadmin</frontName>
                </args>
            </affiliateplusprogramadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <affiliateplusprogram>
                    <file>affiliateplusprogram.xml</file>
                </affiliateplusprogram>
            </updates>
        </layout>
        <events>
            <affiliateplus_adminhtml_add_column_banner_grid>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>addColumnBannerGrid</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_adminhtml_add_column_banner_grid>
            <affiliateplus_adminhtml_add_field_banner_form>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>addFieldBannerForm</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_adminhtml_add_field_banner_form>
            <affiliateplus_adminhtml_add_field_transaction_form>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>addFieldTransactionForm</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_adminhtml_add_field_transaction_form>
            <affiliateplus_adminhtml_add_account_tab>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>addAccountTab</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_adminhtml_add_account_tab>
        </events>
        <translate>
            <modules>
                <Magestore_Affiliateplusprogram>
                    <files>
                        <default>Magestore_Affiliateplusprogram.csv</default>
                    </files>
                </Magestore_Affiliateplusprogram>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <affiliateplusprogram>
                <class>Magestore_Affiliateplusprogram_Model</class>
                <resourceModel>affiliateplusprogram_mysql4</resourceModel>
            </affiliateplusprogram>
            <affiliateplusprogram_mysql4>
                <class>Magestore_Affiliateplusprogram_Model_Mysql4</class>
                <entities>
                    <program>
                        <table>affiliateplusprogram</table>
                    </program>
                    <value>
                        <table>affiliateplusprogram_value</table>
                    </value>
                    <category>
                        <table>affiliateplusprogram_category</table>
                    </category>
                    <product>
                        <table>affiliateplusprogram_product</table>
                    </product>
                    <account>
                        <table>affiliateplusprogram_account</table>
                    </account>
                    <joined>
                        <table>affiliateplusprogram_joined</table>
                    </joined>
                    <transaction>
                        <table>affiliateplusprogram_transaction</table>
                    </transaction>
                </entities>
            </affiliateplusprogram_mysql4>
        </models>
        <resources>
            <affiliateplusprogram_setup>
                <setup>
                    <module>Magestore_Affiliateplusprogram</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </affiliateplusprogram_setup>
            <affiliateplusprogram_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </affiliateplusprogram_write>
            <affiliateplusprogram_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </affiliateplusprogram_read>
        </resources>
        <blocks>
            <affiliateplusprogram>
                <class>Magestore_Affiliateplusprogram_Block</class>
            </affiliateplusprogram>
        </blocks>
        <helpers>
            <affiliateplusprogram>
                <class>Magestore_Affiliateplusprogram_Helper</class>
            </affiliateplusprogram>
        </helpers>
        <events>
            <affiliateplus_account_save_after>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>accountSaveAfter</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_account_save_after>
            <affiliateplus_address_collect_total>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>addressCollectTotal</method>
                    </affiliateplusprogram>
                </observers>
            </affiliateplus_address_collect_total>
            <customer_delete_before>
                <observers>
                    <affiliateplusprogram>
                        <type>singleton</type>
                        <class>affiliateplusprogram/observer</class>
                        <method>customerDeleteBefore</method>
                    </affiliateplusprogram>
                </observers>
            </customer_delete_before>
        </events>
    </global>
    <default>
        <affiliateplus>
            <general>
                <commission>0</commission>
                <discount>0</discount>
                <show_default>0</show_default>
            </general>
        </affiliateplus>
    </default>
</config>