<?xml version="1.0"?>
<config>
	<sections>
        <affiliateplus>
            <groups>
                <email>
                    <fields>
                        <report_separator translate="label">
                            <label>Report To Affiliate Account</label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>affiliateplus/adminhtml_field_separator</frontend_model>
                            <sort_order>500</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>10px</comment>
                        </report_separator>
                        <is_sent_report translate="label">
                            <label>Send report email to affiliates</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>510</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_sent_report>
                        <report_period translate="label">
                            <label>Report sending frequency</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>520</sort_order>
                            <source_model>affiliateplus/system_config_source_period</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </report_period>
                        <report_template>
                            <label>Report email template</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>530</sort_order>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </report_template>
                    </fields>
                </email>
				<statistic translate="label" module="affiliateplusstatistic">
                    <label>Affiliate Plus Report</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Frontend Report</label>
                            <frontend_type>select</frontend_type>  
							<source_model>adminhtml/system_config_source_yesno</source_model>                 
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment></comment>
                        </enable>
						<charts translate="label">
							<label>Enable Charts</label>
                            <frontend_type>select</frontend_type>  
							<source_model>adminhtml/system_config_source_yesno</source_model>                 
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment></comment>
						</charts>
						<ytd_start translate="label">
							<label>Year-To-Date Starts</label>
							<frontend_type>select</frontend_type>
							<frontend_model>adminhtml/report_config_form_field_ytdStart</frontend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</ytd_start>
						<mtd_start translate="label comment">
							<label>Current Month Starts</label>
							<frontend_type>select</frontend_type>
							<frontend_model>adminhtml/report_config_form_field_mtdStart</frontend_model>
							<comment>Select day of the month.</comment>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</mtd_start>
					</fields>
				</statistic>
            </groups>
        </affiliateplus>
    </sections>
</config>
